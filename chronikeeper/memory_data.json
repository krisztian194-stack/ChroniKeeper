from memory_engine import MemoryEngine, MemoryEvent

engine = MemoryEngine(personality_multiplier=1.1)

# Add sample memory
m = MemoryEvent(
    event_id="camping_1",
    summary="We went camping in the forest near the lake. It was peaceful.",
    tags=["camping", "forest", "lake"],
    participants=["Alex", "Luna"],
    location="Northern Woods",
    emotion_score=0.7,
    importance=1.2,
    memorable=True
)
engine.add_memory(m)

# Advance time and check decay
engine.tick_time(days=30)

# Recall by tag
print(engine.recall_by_tag("camping"))

# Stats
print(engine.stats())
